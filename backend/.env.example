# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=4000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/sirius_jobs
# Or MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sirius_jobs?retryWrites=true&w=majority

# PostgreSQL/Neon Connection (Optional - for Prisma if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/sirius_jobs
# Or Neon:
# DATABASE_URL=postgresql://username:password@your-neon-host.neon.tech/sirius_jobs?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Paystack Payment Gateway
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Frontend URL (for CORS and callbacks)
FRONTEND_URL=http://localhost:5500
CLIENT_ORIGIN=http://localhost:5500,http://localhost:5173,http://127.0.0.1:5500

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
API_URL=http://localhost:4000

# Email Service (Optional - for future email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
